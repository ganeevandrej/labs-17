# include <iostream>

using namespace std;

int main()
{
    int a[10];
    int n, r=0;

    cin >> n;


    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    r = a[1] - a[0];
    for (int i = 2; i < n; i++) {
        if ( r != a[i] - a[i - 1])
        r = 0;
    }
    cout << r << endl;
    return 0;
}
